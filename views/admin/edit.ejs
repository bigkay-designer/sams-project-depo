<%- include ('../partials/header') %> 
<%- include ('../partials/admin-nav') %> 
    <section class="main-admin">
        <div class="container">
            <section class="edit-post">
                    <div class="fields">
                        <h1>create a post</h1>
                        <form action="/readmore/<%= post._id%>?_method=PUT" method="POST">
                            <div class="content">
                                <label for="title">title</label>
                                <input type="text" name="title" value="<%= post.title%>" required>
                            </div>
                            <div class="content">
                                <label for="image">image</label>
                                <input type="text" name="image" value="<%= post.image%>" required>
                            </div>
                            <div class="body-input">
                                <p>body</p>
                                <textarea name="body" id="body" cols="30" rows="10"><%= post.body%></textarea>
                            </div>
                            <div class="topic">
                                <select name="topic" id="">
                                    <option value="animals">animals</option>
                                    <option value="funfacts">funfacts</option>
                                    <option value="nature">nature</option>
                                    <option value="movies">movies and shows</option>
                                    <option value="science">science</option>
                                </select>
                            </div>
                            <div class="btn">
                                <button type="submit"> update post</button>
                            </div>
                        </form>
                    </div>
            </section>
        </div>
    </section>
<%- include ('../partials/footer') %> 