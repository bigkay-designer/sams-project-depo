<%- include ('../partials/header') %> 
<%- include ('../partials/main-nav') %> 

<header class="subnav-header">
    <div class="container">
        <!-- ///////////////////////////////////////////// -->

        <section class="posts">
            <div class="header">
                <div class="title">
                    <h1> entertainment </h1>
                </div>
                <div class="sub-links">
                    <div class="links">
                        <a href="/entertainment/funfacts">funfacts</a>
                        <a href="/entertainment/movies%20&%20shows">movies & shows</a>
                        <a href="/entertainment/technology">technology</a>
                        <a href="/entertainment/sports%20&%20games">sports & games</a>
                    </div>
                </div>
            </div>
            <div class="posts-div">
                <% if(posts){%>
                    <% posts.forEach(post=>{ %>
                        <div class="images">
                            <div class="img">
                                <img src="<%= post.image%>" alt="">
                            </div>
                            <div class="name">
                                <p><%= post.name%></p>
                            </div>
                            <div class="topic">
                                <p><%= post.topic%></p>
                            </div>
                            <div class="body">
                                <p><%- post.body.substring(0, 50)%></p>
                            </div>
                            <div class="readmore">
                                <a href="/readmore/<%= post._id%>">read more</a>
                            </div>
                        </div>
                    <% }) %> 
                <% } %> 
            </div>
        </section>
        
    </div>
</header>





<%- include ('../partials/footer') %> 
