<header class="home-header">
    <div class="container">
       <div class="svg">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1600 300"><path fill="#0099ff" fill-opacity="1" d="M0,32L26.7,58.7C53.3,85,107,139,160,176C213.3,213,267,235,320,240C373.3,245,427,235,480,202.7C533.3,171,587,117,640,117.3C693.3,117,747,171,800,181.3C853.3,192,907,160,960,176C1013.3,192,1067,256,1120,256C1173.3,256,1227,192,1280,181.3C1333.3,171,1387,213,1413,234.7L1440,256L1440,320L1413.3,320C1386.7,320,1333,320,1280,320C1226.7,320,1173,320,1120,320C1066.7,320,1013,320,960,320C906.7,320,853,320,800,320C746.7,320,693,320,640,320C586.7,320,533,320,480,320C426.7,320,373,320,320,320C266.7,320,213,320,160,320C106.7,320,53,320,27,320L0,320Z"></path></svg>
       </div>
        <section class="showcase">
            <div class="slide-show">
                <% if(posts){%>
                    <% posts.forEach(post=>{ %>
                        <div class="images my-slides">
                            <div class="img">
                                <img src="<%= post.image%>" alt="">
                            </div>
                            <div class="name">
                                <p><%= post.name%></p>
                            </div>
                            <div class="cate">
                                <p><%= post.topic%></p>
                            </div>
                            <div class="description">
                                <p><%= post.body.substring(0, 150)%></p>
                            </div>
                            <div class="readmore">
                                <a href="readmore/<%= post._id%>">readmore</a>
                            </div>
                        </div>
                    <% }) %> 
                <% } %> 
            </div>
        </section>

        <section class="posts">
            <% if(posts){%>
                <% posts.forEach(post=>{ %>
                    <div class="images">
                        <div class="img">
                            <img src="<%= post.image%>" alt="">
                        </div>
                        <div class="name">
                            <p><%= post.name%></p>
                        </div>
                        <div class="cate">
                            <p><%= post.topic%></p>
                        </div>
                        <div class="description">
                            <p><%= post.body.substring(0, 50)%></p>
                        </div>
                        <div class="readmore">
                            <a href="readmore/<%= post._id%>">readmore</a>
                        </div>
                    </div>
                <% }) %> 
            <% } %> 
        </section>
        
    </div>
</header>





